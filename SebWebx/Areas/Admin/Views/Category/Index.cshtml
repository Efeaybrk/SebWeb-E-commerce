@model List<Category>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Kategoriler</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row pt-4">
                <div class="col-6">
                    <h2 class="text-primary">
                        Kategori Listesi
                    </h2>
                </div>
                <div class="col-6">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>  Yeni kategori oluştur
                    </a>

                </div>
            </div>

            <table class="table table-bordered table-striped">
                <thead>

                    <tr>

                        <th>
                            Kategori Adı
                        </th>

                        <th>
                            Sipariş Sayısı
                        </th>

                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>

                            <td>
                                @obj.CategoryName
                            </td>

                            <td>
                                @obj.DisplayOrder
                            </td>

                            <td>
                                <div class="w-75 btn-group" role="group"></div>
                                <a asp-controller="Category" asp-action="Edit" asp-route-CategoryId="@obj.CategoryID" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Düzenle
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-CategoryId="@obj.CategoryID" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
